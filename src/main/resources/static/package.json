{
  "name": "we-global",
  "version": "1.0.0",
  "scripts": {

    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "build_prod": "npm run build && browserify -s main dist/main.js > dist/bundle.js && npm run minify",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",

    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "tsc:run-w": "npm run build_prod && concurrently \"tsc -w\" \"browser-sync start --config bs-config.js\"",
    "browser-sync": "browser-sync start --config bs-config.js"
  },
  "dependencies": {
    "@angular/common": "~2.0.2",
    "@angular/compiler": "~2.0.2",
    "@angular/core": "~2.0.2",
    "@angular/forms": "~2.0.2",
    "@angular/http": "~2.0.2",
    "@angular/platform-browser": "~2.0.2",
    "@angular/platform-browser-dynamic": "~2.0.2",
    "@angular/router": "~3.0.2",
    "@angular/upgrade": "~2.0.2",
    "angular-in-memory-web-api": "~0.1.5",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-beta.12",
    "systemjs": "0.19.39",
    "zone.js": "^0.6.25",
    "browser-sync": "^2.17.2",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.8",
    "ng2-table": "",
    "angular2-data-table": "^0.12.0",
    "primeng": "^1.0.0-beta.16"
  },
  "devDependencies": {
    "concurrently": "^3.0.0",
    "typings": "^1.4.0",
    "@types/core-js": "^0.9.34",
    "browserify": "^13.0.1",
    "http-server": "^0.9.0",
    "typescript": "^2.0.3",
    "uglifyjs": "^2.4.10"
  }
}